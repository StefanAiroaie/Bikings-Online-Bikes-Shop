{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/AddToCartBtn.jsx", "components/PopularProducts.jsx", "components/ProductCard.jsx", "components/PopularProductsCarousel.jsx", "components/Nav.jsx", "components/Header.jsx", "components/Footer.jsx", "components/CartSidebar.jsx", "components/CartProvider.jsx", "app/layout.jsx", "app/page.jsx", "app/product/[slug]/page.jsx", "lib/sanity.jsx", "lib/utils.js"],
  "exclude": ["node_modules"]
}
